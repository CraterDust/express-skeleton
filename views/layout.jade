doctype html
head
  title Express

  //- meta tags/seo
  meta(name="viewport", content="width=device-width, initial-scale=1")
  block meta
  
  //- vendor stylesheets
  != css('vendor/bootstrap.min')
  block vendor-styles

  //- local stylesheets
  != css('app')
  block local-styles

body
  //- TODO: navigation
  block content

  //- vendor scripts
  != js('vendor/jquery.min')
  != js('vendor/bootstrap.min')
  block vendor-scripts

  //- local scripts
  != js('app')
  block local-scripts
